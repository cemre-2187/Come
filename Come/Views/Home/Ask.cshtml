@using Microsoft.AspNetCore.Identity



@model Come.Models.AskQuestion;


@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Soru Sor";
}



<section>
    <div class="w-100 pt-60 position-relative">
        <div class="fixed-bg" style="background-image: url(/images/bbg3.jpg);"></div>
        <div class="container">
            <div class="page-title-wrap text-center w-100 d-inline-block">
                <div class="page-title-inner d-inline-block">
                    <h2 class="mb-0 text-color7">Sor Bakalım!</h2>
                    <p class="mb-0 text-white">
                        Aklınıza takılan herhangi bir sorunuzu sitemizde
                        paylaşabilirsiniz.
                    </p>
                </div>
                <div class="breadcrumbs-wrap w-100">

                    <a asp-controller="Home" asp-action="Ask" style="color:white;background-color:transparent; border-radius:15px;border-style:groove; border-color: white;"
                       class="btn btn-primary">Soru Sor</a>

                </div>
            </div><!-- Page Title Wrap -->
        </div>
    </div>
</section>


<div class="container">

    <form asp-action="Ask" class="w-100" id="email-form">
        <div class="form-group">
            <div class="response"></div>
        </div>

        <div class="row mrg20">
            <div class="col-md-6 col-sm-6 col-lg-6">
                <input asp-for="Question.Title" class="w-100 mt-20 fname form-control" placeholder="Soru Başlığı" required>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6">
                <select asp-for="Question.CategoryId" asp-items="ViewBag.CategoryId" class="mt-20 form-control fname w-100">
                </select>

            </div>

            <div style="display:none" class="form-group">
                <label asp-for="Question.User" class="control-label"></label>
                <input asp-for="Question.User" class="form-control" value="@UserManager.GetUserName(User)" />
                <span asp-validation-for="Question.User" class="text-danger"></span>
            </div>
            <div style="display:none" class="form-group">
                <label asp-for="Question.Description" class="control-label"></label>
                <input asp-for="Question.Description" class="form-control" value="Des" />
                <span asp-validation-for="Question.Description" class="text-danger"></span>
            </div>


            <div style="display:none" class="form-group">
                <label asp-for="Question.Date" class="control-label"></label>
                <input asp-for="Question.Date" class="form-control" value="@ViewData["Date"]" />
                <span asp-validation-for="Question.Date" class="text-danger"></span>
            </div>

            <div class="col-md-12 col-sm-12 col-lg-12">
                <textarea style="height:300px" asp-for="Question.Body" class="w-100 mt-20 contact_message form-control" value="" placeholder="Soru" required></textarea>

            </div>
            <div class="form-group">
                <input type="submit" value="Sor Bakalım" class="btn btn-primary mt-5" />
            </div>
        </div>
    </form>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
