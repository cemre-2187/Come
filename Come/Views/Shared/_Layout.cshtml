    <style>
          .cs4:hover {
            background-color: white;
            color: blue;
        }
        #AdminPanel {
            color: white;
        }

        .AdminList {
            color: white;
            background-color: #343a40;
            border: none;
        }



        #UserImg {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: gray;
            position: center;
            margin: auto;
        }


        .textarea {
            width: 100%;
            height: 150px;
            padding: 12px 20px;
            box-sizing: border-box;
            border: 2px solid #ccc;
            border-radius: 4px;
            background-color: #f8f8f8;
            resize: none;
        }







        .box1 {
            position: relative;
            width: 300px;
            height: 100px;
            box-sizing: border-box;
            text-align: center;
            margin: 0 10px;
            background: #00171d;
            overflow: hidden;
            border-radius: 4px;
            box-shadow: 0 0 0 2px rgba(0,7,10,1);
        }

            .box1 .icon1 {
                width: 100%;
                height: 100%;
                background: #00171d;
                transition: 0.5s;
            }

                .box1 .icon1 .fa {
                    font-size: 4em;
                    line-height: 100px;
                    color: #f8f7f3;
                }

            .box1:hover .icon1 {
                transform: scale(0);
            }

            .box1 .details1 {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: #03a9f4;
                transition: 0.5s;
                transform: scale(2);
                opacity: 0;
            }

            .box1:hover .details1 {
                transform: scale(1);
                opacity: 1;
            }

            .box1 .details1 .h31 {
                margin: 0;
                padding: 0;
                line-height: 100px;
                font-size: 24px;
                color: white;
            }

            .box1 .details1:nth-child(2) .details1 {
                background: #e91e63;
            }

            .box1 .details1:nth-child(2) .details1 {
                background: #607d8b;
            }
             .cs1{
            font-size: 6rem;
            color:#99B5CD;
        }
        .service-box-wrap:hover i{
           color:white
        }
         .cs2{
                border-radius: 15px;
            }
    </style>
</head>
<body>


    @if (SignInManager.IsSignedIn(User))
    {



        @if (User.IsInRole("Admin"))
        {

            <div class="pos-f-t">
                <div class="collapse" id="navbarToggleExternalContent">
                    <div class="bg-dark p-4">
                        <h5 class="text-white h4">Panel Yönetimi</h5>

                        <ul class="list-group list-group-horizontal bg-dark">
                            <li style="text-decoration:none;color:white" class="list-group-item AdminList"><a class="btn btn-dark" asp-controller="Questions" asp-action="Index">Soru Düzenle</a></li>
                            <li style="text-decoration:none;color:white" class="list-group-item AdminList"><a class="btn btn-dark" asp-controller="Answers" asp-action="Index">Cevap Düzenle</a></li>
                            <li style="text-decoration:none;color:white" class="list-group-item AdminList"><a class="btn btn-dark" asp-controller="Categories" asp-action="Index">Kategori Düzenle</a></li>
                        </ul>

                    </div>
                </div>
                <nav class="navbar navbar-dark bg-dark">
                    <button id="AdminPanel" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span style="color:white" class="navbar-toggler-icon"></span> Admin Paneli
                    </button>
                </nav>
            </div>
        }

    }

    <div id="mta-page-loader-container" class="mta-loader-container style1">
        <div id="mta-page-loader" class="mta-loader">
            <div class="inner"></div>
            <img class="loader-logo" src="~/images/loader-logo.png" alt="Loader Logo">
        </div>
    </div>
    <header class="stick style1 logo-left sticky">
        <div class="container d-flex flex-row justify-content-between flex-nowrap">
            <div class="header-nav-wrap w-100">
                <nav class="nav-wrap d-flex flex-row align-items-center justify-content-between flex-nowrap">
                    <div class="menu-wrap d-flex flex-row justify-content-start flex-nowrap w-100">
                        <div style="margin-right: 30px;margin-top: -10px;" class="logo">
                            <a class="desktop-logo" asp-controller="Home" asp-action="Index">
                                <img class="default-logo img-fluid" src="~/images/bisorun.png" alt="Logo"
                                     srcset="~/images/bisorun.png 2x">
