                    </div><!-- Menu Wrap -->
                    <div style="display:inline" class="menu-right-icons d-flex flex-row align-items-center justify-content-end flex-nowrap">
                        @await Html.PartialAsync("~/Views/Shared/_LoginPartial.cshtml")

                    </div>
                    <div style="display:inline" class="menu-right-icons d-flex flex-row align-items-center justify-content-end flex-nowrap">
                        @await Html.PartialAsync("~/Views/Shared/_Logintwo.cshtml")

                    </div>
                </nav>
            </div><!-- Header Nav Wrap -->
        </div>
    </header><!-- Header -->


    <div class="responsive-header w-100">
        <div class="responsive-topbar w-100">
            <div class="container d-flex flex-wrap justify-content-between">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img class="img-fluid" src="~/images/bisorun.png"
                             alt="Logo">
                    </a>
                </div><!-- Logo -->
                <div class="menu-right-icons text-white d-flex flex-row align-items-center justify-content-end flex-nowrap">
                    <span class="responsive-menu-btn"><i class="fas fa-align-justify"></i></span>


                </div>
            </div>
        </div>
        <div class="responsive-menu">
            <div class="logo d-inline-block w-100">
                <a asp-controller="Home" asp-action="Index">
                    <img class="img-fluid" src="~/images/bisorun.png"
                         alt="Logo">
                </a>
                <ul style="list-style:none">
                    <li class="mb-2">
                        @await Html.PartialAsync("~/Views/Shared/_LoginPartial.cshtml")
                    </li>
                    <li class="mb-2">
                        @await Html.PartialAsync("~/Views/Shared/_Logintwo.cshtml") 
                    </li>
                </ul>
              
               
            </div>
            <ul class="mb-0 list-unstyled">
                <li>
                    <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>

