                                <li><a asp-controller="Home" asp-action="Category" asp-route-id="12">Oyun</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="widget w-100">
                            <h4 class="text-white">Kategoriler</h4>
                            <ul class="mb-0 list-unstyled">
                                <li><a asp-controller="Home" asp-action="Category" asp-route-id="13">Moda</a></li>
