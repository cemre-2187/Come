@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

    


        <form style="display:inline" id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button style="display:inline;position:relative" id="logout" type="submit" class="nav-link btn btn-link text-dark"><i class="fas fa-user-slash"></i></button>
        </form>


    }
    else
    {


        <a style="display:inline;position:relative" id="register" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-clipboard"></i></a>


    }
</ul>
